<?xml version="1.0" encoding="utf-8"?>
<!-- Liquid Glass Round Button - Clean and simple -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/ripple_accent">
    <item>
        <layer-list>
            <!-- Glass background -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="#30FFFFFF" />
                </shape>
            </item>
            <!-- Inner highlight -->
            <item>
                <shape android:shape="oval">
                    <gradient
                        android:type="linear"
                        android:angle="90"
                        android:startColor="#15FFFFFF"
                        android:endColor="#00000000" />
                </shape>
            </item>
            <!-- Border -->
            <item>
                <shape android:shape="oval">
                    <stroke
                        android:width="1dp"
                        android:color="#20FFFFFF" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>
