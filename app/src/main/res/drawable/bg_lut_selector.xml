<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <!-- Main card background -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="135"
                        android:startColor="#FF1E1E22"
                        android:endColor="#FF141418" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            <!-- Inner glow for depth -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="radial"
                        android:gradientRadius="80dp"
                        android:centerX="50%"
                        android:centerY="30%"
                        android:startColor="#20FFFFFF"
                        android:endColor="#00000000" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            <!-- Accent border -->
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="2dp"
                        android:color="@color/accent_start" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- Glass background -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#20FFFFFF" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            <!-- Inner glow -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="radial"
                        android:gradientRadius="70dp"
                        android:centerX="50%"
                        android:centerY="30%"
                        android:startColor="#10FFFFFF"
                        android:endColor="#00000000" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            <!-- Subtle border -->
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="#18FFFFFF" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
