<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#40FFFFFF">
    <item>
        <layer-list>
            <!-- Main gradient background -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="135"
                        android:startColor="@color/accent_start"
                        android:endColor="@color/accent_end" />
                    <corners android:radius="24dp" />
                </shape>
            </item>
            <!-- Inner glow for premium feel -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="radial"
                        android:gradientRadius="80dp"
                        android:centerX="50%"
                        android:centerY="30%"
                        android:startColor="#35FFFFFF"
                        android:endColor="#00FFFFFF" />
                    <corners android:radius="24dp" />
                </shape>
            </item>
            <!-- Subtle top shine -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="90"
                        android:startColor="#00FFFFFF"
                        android:centerColor="#00FFFFFF"
                        android:endColor="#20FFFFFF" />
                    <corners android:radius="24dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>
