<?xml version="1.0" encoding="utf-8"?>
<!-- Liquid Glass Chip - Enhanced glass morphism effect -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state - accent gradient with liquid glass -->
    <item android:state_checked="true">
        <layer-list>
            <!-- Base gradient -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="135"
                        android:startColor="@color/accent_start"
                        android:endColor="@color/accent_end" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <!-- Inner highlight -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="90"
                        android:startColor="#25FFFFFF"
                        android:endColor="#00FFFFFF" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <!-- Radial glow -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="radial"
                        android:gradientRadius="60dp"
                        android:centerX="50%"
                        android:centerY="30%"
                        android:startColor="#35FFFFFF"
                        android:centerColor="#10FFFFFF"
                        android:endColor="#00FFFFFF" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <!-- Shimmer line -->
            <item android:top="0dp" android:left="0dp" android:right="0dp" android:height="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#40FFFFFF" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="135"
                        android:startColor="@color/accent_start"
                        android:endColor="@color/accent_end" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="90"
                        android:startColor="#25FFFFFF"
                        android:endColor="#00FFFFFF" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="radial"
                        android:gradientRadius="60dp"
                        android:centerX="50%"
                        android:centerY="30%"
                        android:startColor="#35FFFFFF"
                        android:centerColor="#10FFFFFF"
                        android:endColor="#00FFFFFF" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <item android:top="0dp" android:left="0dp" android:right="0dp" android:height="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#40FFFFFF" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Default state - liquid glass effect -->
    <item>
        <layer-list>
            <!-- Base glass -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#35FFFFFF" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <!-- Top highlight -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="90"
                        android:startColor="#18FFFFFF"
                        android:centerColor="#05FFFFFF"
                        android:endColor="#00000000" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <!-- Inner glow -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="radial"
                        android:gradientRadius="50dp"
                        android:centerX="50%"
                        android:centerY="30%"
                        android:startColor="#18FFFFFF"
                        android:centerColor="#03FFFFFF"
                        android:endColor="#00000000" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <!-- Outer border with glow -->
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="#35FFFFFF" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <!-- Inner rim -->
            <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="0.5dp"
                        android:color="#12FFFFFF" />
                    <corners android:radius="19dp" />
                </shape>
            </item>
            <!-- Bottom shadow -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="270"
                        android:startColor="#00000000"
                        android:endColor="#10000000" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
