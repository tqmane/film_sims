<?xml version="1.0" encoding="utf-8"?>
<!-- Dialog glass background with enhanced opacity -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main glass background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/glass_bg" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    <!-- Inner radial glow for glass depth -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="300dp"
                android:centerX="50%"
                android:centerY="20%"
                android:startColor="#12FFFFFF"
                android:endColor="#00000000" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    <!-- Subtle top edge highlight -->
    <item
        android:top="1dp"
        android:left="32dp"
        android:right="32dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#00FFFFFF"
                android:endColor="#15FFFFFF" />
            <corners android:topLeftRadius="28dp" android:topRightRadius="28dp" />
            <size android:height="2dp" />
        </shape>
    </item>
    <!-- Single border stroke -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/glass_border" />
            <corners android:radius="28dp" />
        </shape>
    </item>
</layer-list>
