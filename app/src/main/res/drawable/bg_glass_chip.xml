<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state - accent gradient -->
    <item android:state_checked="true">
        <layer-list>
            <!-- Gradient background -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="135"
                        android:startColor="@color/accent_start"
                        android:endColor="@color/accent_end" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <!-- Inner glow for depth -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="radial"
                        android:gradientRadius="60dp"
                        android:centerX="50%"
                        android:centerY="30%"
                        android:startColor="#30FFFFFF"
                        android:endColor="#00FFFFFF" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="135"
                        android:startColor="@color/accent_start"
                        android:endColor="@color/accent_end" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="radial"
                        android:gradientRadius="60dp"
                        android:centerX="50%"
                        android:centerY="30%"
                        android:startColor="#30FFFFFF"
                        android:endColor="#00FFFFFF" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Default state - glass effect -->
    <item>
        <layer-list>
            <!-- Glass background -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#30FFFFFF" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <!-- Inner glow gradient -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="radial"
                        android:gradientRadius="50dp"
                        android:centerX="50%"
                        android:centerY="30%"
                        android:startColor="#15FFFFFF"
                        android:endColor="#00000000" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <!-- Single border -->
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="#25FFFFFF" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
