<?xml version="1.0" encoding="utf-8"?>
<!-- Liquid Glass Shimmer Effect for animated glass highlight -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#20FFFFFF">

    <item>
        <selector>
            <!-- Normal state -->
            <item>
                <layer-list>
                    <!-- Base shimmer -->
                    <item>
                        <shape android:shape="rectangle">
                            <gradient
                                android:type="linear"
                                android:angle="45"
                                android:startColor="#00FFFFFF"
                                android:centerColor="#15FFFFFF"
                                android:endColor="#00FFFFFF" />
                            <corners android:radius="24dp" />
                        </shape>
                    </item>
                </layer-list>
            </item>

            <!-- Pressed state -->
            <item android:state_pressed="true">
                <layer-list>
                    <item>
                        <shape android:shape="rectangle">
                            <gradient
                                android:type="linear"
                                android:angle="45"
                                android:startColor="#00FFFFFF"
                                android:centerColor="#25FFFFFF"
                                android:endColor="#00FFFFFF" />
                            <corners android:radius="24dp" />
                        </shape>
                    </item>
                </layer-list>
            </item>
        </selector>
    </item>

</ripple>
