<?xml version="1.0" encoding="utf-8"?>
<!-- Liquid Glass Dialog - Clean frosted glass -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F01A1A1D" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Top highlight -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#20FFFFFF"
                android:endColor="#00000000" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#15FFFFFF" />
            <corners android:radius="24dp" />
        </shape>
    </item>

</layer-list>
