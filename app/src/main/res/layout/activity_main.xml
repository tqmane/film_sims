<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF050508">

    <!-- GLSurfaceView -->
    <android.opengl.GLSurfaceView
        android:id="@+id/glSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Main Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top Bar - Minimal, Clean Design -->
        <FrameLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingTop="48dp"
            android:paddingBottom="20dp"
            android:background="@drawable/gradient_top_shadow">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- App Title - Simplified -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@color/text_primary"
                        android:textSize="22sp"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.01" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/subtitle_film_simulator"
                        android:textColor="@color/accent_primary"
                        android:textSize="10sp"
                        android:fontFamily="sans-serif"
                        android:letterSpacing="0.12"
                        android:textAllCaps="true"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <!-- Action Buttons - Compact, Clean -->
                <ImageButton
                    android:id="@+id/btnChangePhoto"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_round_button"
                    android:src="@drawable/ic_add"
                    app:tint="@color/text_primary"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:contentDescription="@string/btn_open_gallery" />

                <ImageButton
                    android:id="@+id/btnSettings"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bg_round_button"
                    android:src="@drawable/ic_settings"
                    app:tint="@color/text_primary"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:contentDescription="@string/title_settings" />

                <!-- Export Button - Accent -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSave"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:minHeight="40dp"
                    android:text="@string/save"
                    android:textColor="#FFFFFFFF"
                    android:textSize="13sp"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"
                    android:paddingHorizontal="20dp"
                    android:background="@drawable/bg_accent_gradient_button"
                    app:backgroundTint="@null"
                    app:cornerRadius="20dp"
                    app:elevation="2dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

            </LinearLayout>

        </FrameLayout>

        <!-- Content Area -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- Placeholder - Refined Design -->
            <LinearLayout
                android:id="@+id/placeholderContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#FF050508"
                android:clickable="true"
                android:focusable="true"
                android:padding="48dp">

                <!-- Icon Container - Subtle glass effect -->
                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_glass_panel"
                    android:padding="24dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_add_photo"
                        app:tint="@color/text_tertiary"
                        android:layout_gravity="center" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="@string/label_pick_image"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif-light"
                    android:letterSpacing="0.01" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/desc_pick_image"
                    android:textColor="@color/text_tertiary"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:lineSpacingMultiplier="1.4" />

                <!-- Primary Action Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPickImage"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:layout_marginTop="40dp"
                    android:paddingHorizontal="28dp"
                    android:text="@string/btn_open_gallery"
                    android:textColor="#FFFFFFFF"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.02"
                    android:background="@drawable/bg_accent_gradient_button"
                    app:backgroundTint="@null"
                    app:cornerRadius="26dp"
                    app:elevation="4dp"
                    app:icon="@drawable/ic_gallery"
                    app:iconTint="#FFFFFFFF"
                    app:iconSize="20dp"
                    app:iconPadding="10dp" />

            </LinearLayout>

        </FrameLayout>

        <!-- Bottom Controls - Clean, Organized -->
        <LinearLayout
            android:id="@+id/controlPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_control_panel"
            android:paddingTop="12dp"
            android:paddingBottom="16dp"
            android:paddingHorizontal="12dp">

            <!-- Adjustments Header (Collapsible) -->
            <LinearLayout
                android:id="@+id/adjustmentHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/header_grain"
                    android:textColor="@color/accent_primary"
                    android:textSize="11sp"
                    android:letterSpacing="0.18"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif-medium" />

                <ImageView
                    android:id="@+id/adjustmentToggle"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_expand_less"
                    app:tint="@color/text_tertiary"
                    android:rotation="0" />

            </LinearLayout>

            <!-- Sliders Panel (Collapsible Content) - Grain Controls Only -->
            <LinearLayout
                android:id="@+id/sliderPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:visibility="gone">

                <!-- Grain -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:id="@+id/grainIcon"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_grain"
                        app:tint="@color/text_tertiary"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/grainLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/label_film_grain"
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/grainValue"
                        android:layout_width="42dp"
                        android:layout_height="wrap_content"
                        android:text="50%"
                        android:textColor="@color/text_tertiary"
                        android:textSize="13sp"
                        android:gravity="end"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginEnd="8dp" />

                    <CheckBox
                        android:id="@+id/grainToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/accent_primary"
                        android:scaleX="0.9"
                        android:scaleY="0.9" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/grainSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:max="100"
                    android:progress="50"
                    android:progressTint="@color/text_tertiary"
                    android:thumbTint="@color/text_tertiary"
                    android:progressBackgroundTint="#25FFFFFF"
                    android:enabled="false" />

                <!-- Grain Style Selector -->
                <LinearLayout
                    android:id="@+id/grainStyleContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_grain"
                        app:tint="@color/accent_secondary"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_grain_style"
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif"
                        android:layout_marginEnd="12dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/grainStyleChipGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:selectionRequired="true"
                        app:chipSpacingHorizontal="6dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipXiaomi"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="@string/grain_style_xiaomi"
                            android:textColor="@color/simple_chip_text"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.01"
                            app:chipBackgroundColor="@color/chip_glow_bg"
                            app:chipStrokeWidth="1.5dp"
                            app:chipStrokeColor="@color/chip_glow_stroke"
                            app:chipCornerRadius="16dp"
                            app:chipMinHeight="32dp"
                            app:chipStartPadding="12dp"
                            app:chipEndPadding="12dp"
                            app:textStartPadding="0dp"
                            app:textEndPadding="0dp"
                            app:ensureMinTouchTargetSize="false"
                            app:checkedIconVisible="false" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipOnePlus"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="@string/grain_style_oneplus"
                            android:textColor="@color/simple_chip_text"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.01"
                            app:chipBackgroundColor="@color/chip_glow_bg"
                            app:chipStrokeWidth="1.5dp"
                            app:chipStrokeColor="@color/chip_glow_stroke"
                            app:chipCornerRadius="16dp"
                            app:chipMinHeight="32dp"
                            app:chipStartPadding="12dp"
                            app:chipEndPadding="12dp"
                            app:textStartPadding="0dp"
                            app:textEndPadding="0dp"
                            app:ensureMinTouchTargetSize="false"
                            app:checkedIconVisible="false" />

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#15FFFFFF"
                    android:layout_marginVertical="8dp" />

            </LinearLayout>

            <!-- Camera Brands Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_camera"
                android:textColor="@color/accent_primary"
                android:textSize="10sp"
                android:letterSpacing="0.15"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="6dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/brandList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clipToPadding="false"
                android:scrollbars="none"
                android:layout_marginBottom="10dp" />

            <!-- Style Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_style"
                android:textColor="@color/accent_primary"
                android:textSize="10sp"
                android:letterSpacing="0.15"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="6dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/genreList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clipToPadding="false"
                android:scrollbars="none"
                android:layout_marginBottom="10dp" />

            <!-- Quick Intensity Slider (Always Visible when LUT selected) -->
            <LinearLayout
                android:id="@+id/quickIntensityPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingBottom="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="6dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_opacity"
                        app:tint="@color/accent_primary"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/label_intensity"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/quickIntensityValue"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:gravity="end"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/quickIntensitySlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="100"
                    android:progressTint="@color/accent_primary"
                    android:thumbTint="@color/accent_primary"
                    android:progressBackgroundTint="#30FFFFFF" />

            </LinearLayout>

            <!-- Presets Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_presets"
                android:textColor="@color/accent_primary"
                android:textSize="10sp"
                android:letterSpacing="0.15"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="6dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lutList"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:orientation="horizontal"
                android:clipToPadding="false"
                android:scrollbars="none" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
