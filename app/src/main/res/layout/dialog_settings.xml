<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="24dp"
    android:paddingTop="28dp"
    android:paddingBottom="24dp"
    android:background="@drawable/bg_dialog_glass">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="設定"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:layout_marginBottom="28dp" />

    <!-- Save Location Setting -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存先フォルダ"
        android:textColor="@color/text_secondary"
        android:textSize="13sp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.05"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_input_outline"
        android:paddingHorizontal="16dp"
        android:paddingVertical="14dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/tvSavePath"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pictures/FilmSims"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:singleLine="true"
            android:ellipsize="middle"
            android:gravity="start" />

        <TextView
            android:id="@+id/btnChangePath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="変更"
            android:textColor="@color/accent_primary"
            android:textSize="13sp"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/bg_text_link"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Image Quality Setting -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存品質"
        android:textColor="@color/text_secondary"
        android:textSize="13sp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.05"
        android:layout_marginBottom="14dp"
        android:layout_marginStart="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="4dp"
        android:layout_marginBottom="32dp">

        <SeekBar
            android:id="@+id/qualitySlider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/slider_track_thin"
            android:thumb="@drawable/slider_thumb"
            android:splitTrack="false"
            android:paddingVertical="8dp" />

        <TextView
            android:id="@+id/tvQualityValue"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="100%"
            android:textColor="@color/accent_primary"
            android:textSize="14sp"
            android:fontFamily="sans-serif-bold"
            android:gravity="end"
            android:layout_marginStart="12dp" />

    </LinearLayout>

    <!-- Close Button -->
    <Button
        android:id="@+id/btnCloseSettings"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="閉じる"
        android:textColor="@color/text_primary"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/bg_button_secondary"
        android:stateListAnimator="@null" />

</LinearLayout>
